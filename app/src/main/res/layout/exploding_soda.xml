<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kemblep.hobbsutilities.MainActivity$PlaceholderFragment" >

    <ListView
        android:id="@+id/lv_forecast"
        android:layout_width="150dp"
        android:layout_height="200dp" />

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tv_soda_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="10sp"
        android:layout_below="@+id/lv_forecast"/>

    <TextView
        android:id="@+id/tv_more_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_below="@+id/tv_soda_time" />

    <Button
        android:id="@+id/btn_soda_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_more_info"
        android:layout_marginRight="10sp"
        android:text="@string/btn_station"/>

    <Button
        android:id="@+id/btn_locate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/location32"
        android:layout_toRightOf="@+id/btn_soda_station"
        android:layout_alignBottom="@+id/btn_soda_station"/>

</RelativeLayout>
